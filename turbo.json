{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NEXT_PUBLIC_USE_TESTNET",
        "NEXT_PUBLIC_PRIVY_APP_ID",
        "NEXT_PUBLIC_CELO_RPC",
        "NEXT_PUBLIC_CELO_SEPOLIA_RPC",
        "NEXT_PUBLIC_MARKET_FACTORY_ADDRESS",
        "NEXT_PUBLIC_TESTNET_CUSD",
        "NEXT_PUBLIC_TESTNET_USDC",
        "NEXT_PUBLIC_TESTNET_USDT",
        "NEXT_PUBLIC_SENTRY_DSN",
        "SUPABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY",
        "DEPLOYER_PRIVATE_KEY",
        "CRON_SECRET",
        "TWELVE_DATA_API_KEY",
        "SENTRY_AUTH_TOKEN",
        "SENTRY_ORG",
        "SENTRY_PROJECT"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "compile": {
      "outputs": ["artifacts/**", "typechain-types/**"]
    },
    "test": {}
  }
}
